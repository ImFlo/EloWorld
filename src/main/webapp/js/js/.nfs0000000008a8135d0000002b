			alert("patate");
		},
		error: function(){
			alert("fail");
		}
	});
}

function verifSyn(str) {
    var len = str.length;
    for (var x = 0; x < len; x++) {
        if (str.charCodeAt(x) < 33 || str.charCodeAt(125))
            return false
    }
    return true;
}

function verifChamp(field) {
    if (field.length < 2 || field.length > 16) {
        return false;
    }
    return verifSyn(field);
}

