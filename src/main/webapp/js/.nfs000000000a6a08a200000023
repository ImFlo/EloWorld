function createAccount(player){
	$.ajax({
 		url: "http://localhost:8080/v1/joueurdb/create:"+ player.pseudo +":"+player.mdp+":"
																										+player.email+":"+player.nom+":"
																										+player.prenom,
		data: {},
		type:"POST",
		dataType:"text",
		success:function() {
			alert("account created");
		},
		error: function(){
			alert("fail");
		}
	});
}
