	function getJoueur(id){
	$.ajax({
		url:"http://localhost:8080/v1/joueurdb/" + id,
		data:{},
		type:"GET",
		dataType:"json",
		succes:function(a){
			console.log(a);
			return a;
		},
		error:function(){
			console.log("fail");
		},
	});
}

