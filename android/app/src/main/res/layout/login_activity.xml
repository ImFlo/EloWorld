<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#C0EFFF"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/login"
        android:inputType="text"
        android:singleLine="true"
        android:gravity="center"
        android:id="@+id/login"
    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/login"
        android:id="@+id/password"
    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/password"
        android:id="@+id/repeat_password"
        android:visibility="gone"
    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="first name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/repeat_password"
        android:id="@+id/first_name"
        android:visibility="gone"
    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="last name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/first_name"
        android:id="@+id/last_name"
        android:visibility="gone"
    />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/last_name"
        android:id="@+id/email"
        android:visibility="gone"
    />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="sign in"
        android:onClick="LoginOrCreate"
        android:layout_below="@+id/email"
        android:id="@+id/sign_in_or_create"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="No account ? Create one now !"
        android:autoLink="web"
        android:onClick="toggleLoginOrCreate"
        android:gravity="center"
        android:layout_below="@+id/sign_in_or_create"
        android:id="@+id/create"
    />

</RelativeLayout>
